<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_home_ophtha_event_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_home_ophtha_event_ophtha_picture_iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ophtha_ex_img"
            android:foreground="@drawable/round_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_home_ophtha_event_ophtha_picture_iv">
            <TextView
                android:id="@+id/item_home_ophtha_event_ophtha_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안과 위치"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/item_home_ophtha_event_name_tv"/>

            <TextView
                android:id="@+id/item_home_ophtha_event_info_divide_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/item_home_ophtha_event_ophtha_location_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/item_home_ophtha_event_name_tv"/>

            <TextView
                android:id="@+id/item_home_ophtha_event_ophtha_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안과 이름"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/item_home_ophtha_event_info_divide_bar_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/item_home_ophtha_event_name_tv"/>

            <TextView
                android:id="@+id/item_home_ophtha_event_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트 이름"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_home_ophtha_event_ophtha_location_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
