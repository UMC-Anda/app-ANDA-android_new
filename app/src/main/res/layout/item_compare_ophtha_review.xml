<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_compare_ophtha_review_user_profile_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ophtha_ex_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_compare_ophtha_review_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="냥냥펀치"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toEndOf="@id/item_compare_ophtha_review_user_profile_iv"
                app:layout_constraintTop_toTopOf="@id/item_compare_ophtha_review_user_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/item_compare_ophtha_review_user_profile_iv"/>

            <TextView
                android:id="@+id/item_compare_ophtha_review_user_level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 3"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/Main"
                app:layout_constraintStart_toStartOf="@id/item_compare_ophtha_review_user_name_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_compare_ophtha_review_user_profile_iv"/>

            <RatingBar
                android:id="@+id/item_compare_ophtha_review_rating_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                android:isIndicator="false"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintStart_toEndOf="@id/item_compare_ophtha_review_user_name_tv"
                app:layout_constraintTop_toTopOf="@id/item_compare_ophtha_review_user_level_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_compare_ophtha_review_user_level_tv"/>

            <TextView
                android:id="@+id/item_compare_ophtha_review_text_tv"
                android:layout_width="214dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="원장님 꼼꼼하게 설명해주시고,\n어려운 용어도 알아듣기 쉽게 설명해주셔서 정말 좋았어요. 지인들에게도 항상 이 병원을 추천한답니다 ㅎ_ㅎ"
                android:textSize="7dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/item_compare_ophtha_review_user_name_tv"
                app:layout_constraintTop_toBottomOf="@id/item_compare_ophtha_review_user_level_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>