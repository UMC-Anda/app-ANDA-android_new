<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <ImageView
        android:id="@+id/item_community_ask_doctor_content_top_iv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/background"
        android:layout_marginTop="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_community_ask_doctor_content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_community_ask_doctor_content_top_iv"/>
    <TextView
        android:id="@+id/item_community_ask_doctor_content_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="10dp"
        android:textColor="@color/white_black"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/item_community_ask_doctor_content_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_community_ask_doctor_content_title_tv"/>
    <ImageView
        android:id="@+id/item_community_ask_doctor_content_bottom_iv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/background"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_community_ask_doctor_content_content_tv"/>
    <ImageView
        android:id="@+id/item_community_ask_doctor_content_replyed_iv"
        android:layout_width="52dp"
        android:layout_height="12dp"
        android:src="@drawable/community_ask_doctor_replyed"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>