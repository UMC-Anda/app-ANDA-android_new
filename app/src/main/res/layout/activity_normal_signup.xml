<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.normal.NormalSignupActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sign_up_sign_up_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/signup"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sign_up_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/signup_info"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sign_up_sign_up_tv" />


            <ImageView
                android:id="@+id/sign_up_back_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/ic_back"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/write_community_writing_back_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



            <EditText
                android:id="@+id/sign_up_id_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="@null"
                android:hint="@string/signup_id_hint"
                android:textColorHint="@color/white_black"
                android:paddingStart="10sp"
                android:inputType="text"
                android:textSize="16sp"
                android:background="@drawable/edittext_round_background"
                app:layout_constraintEnd_toStartOf="@+id/sign_up_at_sign_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_sign_up_tv" />


            <TextView
                android:id="@+id/sign_up_at_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_email_delimiter"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_id_et"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_sign_up_tv"
                app:layout_constraintStart_toStartOf="@+id/sign_up_sign_up_tv"
                app:layout_constraintTop_toTopOf="@+id/sign_up_id_et" />




            <TextView
                android:id="@+id/sign_up_email_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/form_error"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_id_et" />

            <EditText
                android:id="@+id/sign_up_password_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@null"
                android:hint="@string/signup_password_hint"
                android:paddingStart="10sp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColorHint="@color/white_black"
                android:background="@drawable/edittext_round_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_id_et" />

            <TextView
                android:id="@+id/sign_up_password_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/form_error"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_password_et" />

            <EditText
                android:id="@+id/sign_up_password_check_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@null"
                android:hint="@string/signup_password_confirm_hint"
                android:paddingStart="10sp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColorHint="@color/white_black"
                android:background="@drawable/edittext_round_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_password_et" />

            <TextView
                android:id="@+id/sign_up_password_check_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/form_error"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_et" />

            <EditText
                android:id="@+id/sign_up_nickName_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@null"
                android:hint="@string/signup_nickName_hint"
                android:textColorHint="@color/white_black"
                android:paddingStart="10sp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:background="@drawable/edittext_round_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_et" />

            <ImageView
                android:id="@+id/sign_up_nickName_checkButton_iv"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:src="@color/gray"
                android:background="@drawable/edittext_round_background"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_nickName_et"
                app:layout_constraintTop_toTopOf="@+id/sign_up_nickName_et"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_nickName_et"/>

            <TextView
                android:id="@+id/sign_up_nickName_checkButton_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="중복확인"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/sign_up_nickName_checkButton_iv"
                app:layout_constraintEnd_toEndOf="@id/sign_up_nickName_checkButton_iv"
                app:layout_constraintTop_toTopOf="@id/sign_up_nickName_checkButton_iv"
                app:layout_constraintBottom_toBottomOf="@id/sign_up_nickName_checkButton_iv"/>
            <TextView
                android:id="@+id/sign_up_nickname_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/form_error"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_nickName_et" />

            <TextView
                android:id="@+id/sign_up_recommander_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택)"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_nickName_et"/>

            <EditText
                android:id="@+id/sign_up_recommander_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@null"
                android:hint="@string/signup_recommander_hint"
                android:textColorHint="@color/white_black"
                android:paddingStart="10sp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:background="@drawable/edittext_round_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_recommander_info_tv" />

            <ImageView
                android:id="@+id/sign_up_sign_up_btn_iv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@color/gray"
                android:background="@drawable/edittext_round_background"
                android:layout_marginTop="72dp"
                app:layout_constraintStart_toStartOf="@id/sign_up_recommander_et"
                app:layout_constraintEnd_toEndOf="@id/sign_up_recommander_et"
                app:layout_constraintTop_toBottomOf="@id/sign_up_recommander_et"/>

            <TextView
                android:id="@+id/sign_up_sign_up_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/sign_up_sign_up_btn_iv"
                app:layout_constraintEnd_toEndOf="@id/sign_up_sign_up_btn_iv"
                app:layout_constraintTop_toTopOf="@id/sign_up_sign_up_btn_iv"
                app:layout_constraintBottom_toBottomOf="@id/sign_up_sign_up_btn_iv"/>

            <TextView
                android:id="@+id/signup_up_go_ophtha_sign_up_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안과로 시작하기"
                android:textColor="@color/Main"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_sign_up_btn_iv"
                app:layout_constraintTop_toBottomOf="@id/sign_up_sign_up_btn_iv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sign_up_select_email"
                android:layout_width="0dp"
                android:layout_height="215sp"
                android:background="@color/black"
                android:layout_marginTop="-2sp"
                app:layout_constraintStart_toStartOf="@id/sign_up_direct_input_et"
                app:layout_constraintEnd_toEndOf="@id/sign_up_direct_input_et"
                app:layout_constraintTop_toBottomOf="@id/sign_up_direct_input_et"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/sign_up_select_email_etc_background_iv"
                    android:layout_width="0dp"
                    android:layout_height="42sp"
                    android:src="@color/white"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/sign_up_select_email_etc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직접입력"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="@id/sign_up_select_email_etc_background_iv"
                    app:layout_constraintTop_toTopOf="@id/sign_up_select_email_etc_background_iv"
                    app:layout_constraintBottom_toBottomOf="@id/sign_up_select_email_etc_background_iv" />

                <ImageView
                    android:id="@+id/sign_up_select_email_google_background_iv"
                    android:layout_width="0dp"
                    android:layout_height="42sp"
                    android:src="@color/white"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="1sp"
                    android:layout_marginTop="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sign_up_select_email_etc_background_iv"/>

                <TextView
                    android:id="@+id/sign_up_select_email_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="google.com"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="@id/sign_up_select_email_google_background_iv"
                    app:layout_constraintTop_toTopOf="@id/sign_up_select_email_google_background_iv"
                    app:layout_constraintBottom_toBottomOf="@id/sign_up_select_email_google_background_iv" />

                <ImageView
                    android:id="@+id/sign_up_select_email_naver_background_iv"
                    android:layout_width="0dp"
                    android:layout_height="42sp"
                    android:src="@color/white"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="1sp"
                    android:layout_marginTop="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sign_up_select_email_google_background_iv"/>

                <TextView
                    android:id="@+id/sign_up_select_email_naver_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="naver.com"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="@id/sign_up_select_email_naver_background_iv"
                    app:layout_constraintTop_toTopOf="@id/sign_up_select_email_naver_background_iv"
                    app:layout_constraintBottom_toBottomOf="@id/sign_up_select_email_naver_background_iv" />

                <ImageView
                    android:id="@+id/sign_up_select_email_nate_background_iv"
                    android:layout_width="0dp"
                    android:layout_height="42sp"
                    android:src="@color/white"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="1sp"
                    android:layout_marginTop="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sign_up_select_email_naver_background_iv"/>

                <TextView
                    android:id="@+id/sign_up_select_email_nate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nate.com"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="@id/sign_up_select_email_nate_background_iv"
                    app:layout_constraintTop_toTopOf="@id/sign_up_select_email_nate_background_iv"
                    app:layout_constraintBottom_toBottomOf="@id/sign_up_select_email_nate_background_iv" />

                <ImageView
                    android:id="@+id/sign_up_select_email_daum_background_iv"
                    android:layout_width="0dp"
                    android:layout_height="42sp"
                    android:src="@color/white"
                    android:layout_marginStart="1sp"
                    android:layout_marginEnd="1sp"
                    android:layout_marginTop="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sign_up_select_email_nate_background_iv"/>

                <TextView
                    android:id="@+id/sign_up_select_email_daum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="daum.net"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="@id/sign_up_select_email_daum_background_iv"
                    app:layout_constraintTop_toTopOf="@id/sign_up_select_email_daum_background_iv"
                    app:layout_constraintBottom_toBottomOf="@id/sign_up_select_email_daum_background_iv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/sign_up_direct_input_et"
                android:layout_width="0dp"
                android:layout_height="44sp"
                android:autofillHints="@null"
                android:hint="@string/signup_lastId_hint"
                android:inputType="textWebEmailAddress"
                android:textSize="16sp"
                android:textColorHint="@color/white_black"
                android:background="@drawable/edittext_round_background"
                android:paddingStart="10sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_id_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sign_up_at_sign_tv"
                app:layout_constraintTop_toTopOf="@+id/sign_up_id_et" />

            <ImageView
                android:id="@+id/sign_up_select_email_btn_iv"
                android:layout_width="12.71dp"
                android:layout_height="8.11dp"
                android:src="@drawable/sign_up_select_email_btn"
                android:background="@color/white"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/sign_up_direct_input_et"
                app:layout_constraintBottom_toBottomOf="@id/sign_up_direct_input_et"
                app:layout_constraintEnd_toEndOf="@id/sign_up_direct_input_et"/>


            <ProgressBar
                android:id="@+id/sign_up_loading_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:indeterminateTint="@color/gray"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_up_go_ophtha_sign_up_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>