<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/write_review1_progressbar_pb"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/radius_background"
        android:background="@drawable/radius_background"
        android:progressTint="@color/Main"
        android:progress="33"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/write_review1_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/write_review1_back_img_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/write_community_writing_back_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <TextView
            android:id="@+id/write_review1_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writing_review_title"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/write_review1_back_img_iv"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/write_review1_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1/3)"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/write_review1_title_tv"
            app:layout_constraintTop_toTopOf="parent" />
        
        <ImageView
            android:id="@+id/write_review1_next_btn_iv"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:src="@drawable/next_btn_unable"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    병원 선택하기-->
    <TextView
        android:id="@+id/write_review1_question_ophtha_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방문하신 병원을 알려주세요."
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_progressbar_pb"/>
    <TextView
        android:id="@+id/write_review1_question_ophtha_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textSize="8dp"
        android:textColor="@color/form_error"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/write_review1_question_ophtha_tv"
        app:layout_constraintTop_toTopOf="@id/write_review1_question_ophtha_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_question_ophtha_tv"/>
    <ImageView
        android:id="@+id/write_review1_select_ophtha_background_iv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/edittext_round_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_question_ophtha_tv"/>
    <TextView
        android:id="@+id/write_review1_select_ophtha_txt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원 선택하기"
        android:textColor="@color/white_black"
        android:textSize="10dp"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="@id/write_review1_select_ophtha_background_iv"
        app:layout_constraintTop_toTopOf="@id/write_review1_select_ophtha_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_select_ophtha_background_iv"/>
    <ImageView
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:src="@drawable/go_arrow_btn_icon"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="@id/write_review1_select_ophtha_background_iv"
        app:layout_constraintTop_toTopOf="@id/write_review1_select_ophtha_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_select_ophtha_background_iv"/>



<!--    수술 선택하기-->
    <TextView
        android:id="@+id/write_review1_question_operation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받으신 수술을 선택해주세요."
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_select_ophtha_background_iv"/>
    <TextView
        android:id="@+id/write_review1_question_operation_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textSize="8dp"
        android:textColor="@color/form_error"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/write_review1_question_operation_tv"
        app:layout_constraintTop_toTopOf="@id/write_review1_question_operation_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_question_operation_tv"/>
    <ImageView
        android:id="@+id/write_review1_select_operation_background_iv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/edittext_round_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_question_operation_tv"/>
    <TextView
        android:id="@+id/write_review1_select_operation_txt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수술 선택하기"
        android:textColor="@color/white_black"
        android:textSize="10dp"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="@id/write_review1_select_operation_background_iv"
        app:layout_constraintTop_toTopOf="@id/write_review1_select_operation_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_select_operation_background_iv"/>
    <ImageView
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:src="@drawable/go_arrow_btn_icon"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="@id/write_review1_select_operation_background_iv"
        app:layout_constraintTop_toTopOf="@id/write_review1_select_operation_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_select_operation_background_iv"/>


    <!--    비용 선택하기-->
    <TextView
        android:id="@+id/write_review1_question_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 비용을 알려주세요."
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_select_operation_background_iv"/>
    <TextView
        android:id="@+id/write_review1_question_price_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택)"
        android:textSize="8dp"
        android:textColor="@color/white_black"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/write_review1_question_price_tv"
        app:layout_constraintTop_toTopOf="@id/write_review1_question_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_question_price_tv"/>
    <TextView
        android:id="@+id/write_review1_select_price_explain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포인트를 사용하신 경우, 실제 지불하신 금액 + 사용하신 포인트 금액을 합하여 적어주세요."
        android:textColor="@color/white_black"
        android:textSize="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/write_review1_question_price_tv"
        app:layout_constraintTop_toBottomOf="@id/write_review1_question_price_tv"/>

    <EditText
        android:id="@+id/write_review1_select_price_background_iv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_round_background"
        android:hint="비용 입력하기"
        android:textColorHint="@color/white_black"
        android:textSize="10dp"
        android:paddingStart="11dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review1_select_price_explain_tv"/>

    <TextView
        android:id="@+id/write_review1_select_price_info_won_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/white_black"
        android:textSize="12dp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/write_review1_select_price_background_iv"
        app:layout_constraintTop_toTopOf="@id/write_review1_select_price_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_review1_select_price_background_iv"/>



</androidx.constraintlayout.widget.ConstraintLayout>