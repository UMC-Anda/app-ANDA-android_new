<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/item_my_info_my_point_history_how_to_use_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포인트 사용한 곳"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_my_info_my_point_history_use_date_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용날짜 : "
        android:textColor="@color/white_black"
        android:textSize="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/item_my_info_my_point_history_how_to_use_tv"
        app:layout_constraintTop_toBottomOf="@id/item_my_info_my_point_history_how_to_use_tv"/>
    <TextView
        android:id="@+id/item_my_info_my_point_history_use_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-01-01"
        android:textColor="@color/white_black"
        android:textSize="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/item_my_info_my_point_history_use_date_info_tv"
        app:layout_constraintTop_toBottomOf="@id/item_my_info_my_point_history_how_to_use_tv"/>



    <TextView
        android:id="@+id/item_my_info_my_point_history_use_point_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100P"
        android:textSize="15dp"
        android:textColor="@color/Main"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/white_black"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_my_info_my_point_history_use_date_info_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>