<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 중간 배너: "MBTI 설문하기" -->
    <TextView
        android:id="@+id/banner_mbti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="눈 유형 검사로 시력교정술 추천"
        android:textColor="#FFFFFF"
        android:background="#800080"
        android:padding="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 상단 배너: "리뷰 등록하고 부작용 관리하기" -->
    <TextView
        android:id="@+id/banner_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="리뷰 등록하고 부작용 관리하기"
        android:textColor="#000000"
        android:background="#FFD700"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/banner_mbti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- 출석체크 달력 -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 룰렛 이미지 -->
    <ImageView
        android:id="@+id/roulette_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@color/gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/banner_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_checkin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- 선택된 항목 표시 -->
    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 항목"
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/roulette_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 출석체크 버튼 -->
    <Button
        android:id="@+id/button_checkin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="출석체크"
        android:background="#008000"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
