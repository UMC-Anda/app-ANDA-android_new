<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- 출석체크 달력 -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 룰렛 이미지 -->
    <ImageView
        android:id="@+id/roulette_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/roullet"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_checkin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/get_point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 point"
        android:visibility="gone"
        android:textSize="30sp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/roulette_image"
        app:layout_constraintEnd_toEndOf="@id/roulette_image"
        app:layout_constraintTop_toTopOf="@id/roulette_image"
        app:layout_constraintBottom_toBottomOf="@id/roulette_image"/>

    <!-- 선택된 항목 표시 -->
    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 항목"
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/roulette_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 출석체크로 얻은 포인트 표시 -->
    <TextView
        android:id="@+id/get_point_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/calendar_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 출석체크 버튼 -->
    <Button
        android:id="@+id/button_checkin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="출석체크"
        android:background="#008000"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/get_point_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>