<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/operation_mbti_img"
        android:layout_width='300dp'
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/eye_mbti_result_smile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/operation_mbti_my_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 시력 MBTI는 '스마일 라식'"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation_mbti_img"/>
    <Button
        android:id="@+id/re_survey_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="다시 검사하기"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation_mbti_my_mbti"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re_survey_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>