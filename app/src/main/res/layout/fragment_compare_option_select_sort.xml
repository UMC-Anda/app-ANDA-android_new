<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--    별점순-->
    <LinearLayout
        android:id="@+id/compare_option_select_sort_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/compare_option_select_sort_rating_checkbox_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:src="@drawable/checkbox_checked"/>
        <TextView
            android:id="@+id/compare_option_select_sort_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="별점순"
            android:textColor="@color/Main"
            android:textStyle="bold"/>
    </LinearLayout>


    <!--    리뷰순-->
    <LinearLayout
        android:id="@+id/compare_option_select_sort_review_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/compare_option_select_sort_rating"
        app:layout_constraintTop_toBottomOf="@id/compare_option_select_sort_rating">
        <ImageView
            android:id="@+id/compare_option_select_sort_review_cnt_checkbox_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/white"
            android:src="@drawable/checkbox_unchecked"/>
        <TextView
            android:id="@+id/compare_option_select_sort_review_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="리뷰순"
            android:textColor="@color/Main"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>