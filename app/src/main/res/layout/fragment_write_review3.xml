<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/write_review3_progressbar_pb"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/radius_background"
        android:progressDrawable="@drawable/radius_background"
        android:progressTint="@color/Main"
        android:progress="100"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review3_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/write_review3_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/write_review3_back_img_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/write_community_writing_back_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/write_review3_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writing_review_title"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/write_review3_back_img_iv"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/write_review3_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3/3)"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/write_review3_title_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/write_review3_next_btn_iv"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:src="@drawable/next_btn_unable"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review3_progressbar_pb"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/write_review3_point_plus_5000_iv"
                android:layout_width="81dp"
                android:layout_height="19dp"
                android:src="@drawable/point_plus_5000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/write_review3_review_certification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="받으신 시술을 인증해주세요."
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_review3_point_plus_5000_iv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(선택)"
                android:textSize="8dp"
                android:textColor="@color/black"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/write_review3_review_certification_tv"
                app:layout_constraintTop_toTopOf="@id/write_review3_review_certification_tv"
                app:layout_constraintBottom_toBottomOf="@id/write_review3_review_certification_tv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_explain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시술 인증이 완료되면 후기에 인증 배지가 부여됩니다."
                android:textSize="8dp"
                android:textColor="@color/white_black"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_tv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_tv"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/write_review3_photo_review_certification_added_photo_rv"
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:layout_marginTop="7dp"
                tools:itemCount="0"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_tv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_explain_tv"
                android:orientation="horizontal"/>
            <ImageView
                android:id="@+id/write_review3_photo_review_certification_add_photo_btn_iv"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:src="@drawable/write_review_add_photo"
                app:layout_constraintStart_toEndOf="@id/write_review3_photo_review_certification_added_photo_rv"
                app:layout_constraintTop_toTopOf="@id/write_review3_photo_review_certification_added_photo_rv"
                app:layout_constraintBottom_toBottomOf="@id/write_review3_photo_review_certification_added_photo_rv"/>

            <ImageView
                android:id="@+id/write_review3_review_certification_warning_info_iv"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/i_information_icon"
                android:scaleType="fitXY"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_review3_photo_review_certification_add_photo_btn_iv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_warning_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안심하세요. 올려주신 정보는 안다 검수팀만 열람할 수 있습니다."
                android:textColor="@color/white_black"
                android:textSize="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toEndOf="@id/write_review3_review_certification_warning_info_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_photo_review_certification_add_photo_btn_iv"/>

            <TextView
                android:id="@+id/write_review3_review_certification_example_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이런 사진을 올려주세요."
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginStart="18dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_warning_info_iv"/>

            <ImageView
                android:id="@+id/write_review3_review_certification_example_img1_iv"
                android:layout_width="102dp"
                android:layout_height="66dp"
                android:src="@color/black"
                android:background="@drawable/edittext_round_background"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_example_tv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_tv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_example_txt1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증"
                android:textColor="@color/white_black"
                android:textSize="8dp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_example_img1_iv"
                app:layout_constraintEnd_toEndOf="@id/write_review3_review_certification_example_img1_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_img1_iv"/>
            <ImageView
                android:id="@+id/write_review3_review_certification_example_img2_iv"
                android:layout_width="102dp"
                android:layout_height="66dp"
                android:src="@color/black"
                android:background="@drawable/edittext_round_background"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/write_review3_review_certification_example_img1_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_tv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_example_txt2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="은행 앱"
                android:textColor="@color/white_black"
                android:textSize="8dp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_example_img2_iv"
                app:layout_constraintEnd_toEndOf="@id/write_review3_review_certification_example_img2_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_img2_iv"/>
            <ImageView
                android:id="@+id/write_review3_review_certification_example_img3_iv"
                android:layout_width="102dp"
                android:layout_height="66dp"
                android:src="@color/black"
                android:background="@drawable/edittext_round_background"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/write_review3_review_certification_example_img2_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_tv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_example_txt3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 문자"
                android:textColor="@color/white_black"
                android:textSize="8dp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_example_img3_iv"
                app:layout_constraintEnd_toEndOf="@id/write_review3_review_certification_example_img3_iv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_img3_iv"/>
            <ImageView
                android:id="@+id/write_review3_review_certification_warning_red_information_iv"
                android:layout_width="9dp"
                android:layout_height="7dp"
                android:src="@drawable/error_icon_color_red"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/write_review3_review_certification_tv"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_example_img1_iv"/>
            <TextView
                android:id="@+id/write_review3_review_certification_warning_red_information_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="직접 병원을 방문하지 않았거나, 내용(병원명/비용/결제일)을 확인할 수 없는 경우 시술 인증이 되지 않을 수 있습니다."
                android:textColor="@color/form_error"
                android:textSize="8dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="-2.5dp"
                app:layout_constraintStart_toEndOf="@id/write_review3_review_certification_warning_red_information_iv"
                app:layout_constraintEnd_toEndOf="@id/write_review3_review_certification_example_img3_iv"
                app:layout_constraintTop_toTopOf="@id/write_review3_review_certification_warning_red_information_iv"/>

            <LinearLayout
                android:id="@+id/write_review3_agree_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="19dp"
                android:layout_marginTop="43dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_review3_review_certification_warning_red_information_tv"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/write_review3_agree_privacy_checkbox_iv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/checkbox_unchecked"/>
                <TextView
                    android:id="@+id/write_review3_agree_privacy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보 수집 이용동의 (필수)"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginStart="11dp"/>
                <ImageView
                    android:id="@+id/write_review3_agree_privacy_show_detail_iv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/question_mark_icon"
                    android:layout_marginStart="9dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>